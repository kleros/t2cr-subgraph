{
  "name": "t2cr-subgraph",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "graph codegen && graph build",
    "deploy:mainnet": "yarn run build && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ mtsalenc/t2cr-subgraph",
    "release": "standard-version"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.19.0",
    "@graphprotocol/graph-ts": "^0.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.6",
    "standard-version": "^9.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/node_modules/**"
    ],
    "globals": [
      "require"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
