{
  "name": "t2cr-subgraph",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "graph codegen && graph build",
    "deploy:mainnet": "yarn run build && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ mtsalenc/t2cr-subgraph",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format": "yarn prettier-format && eslint . --ext .ts --fix",
    "lint": "eslint . --ext .ts && prettier --config .prettierrc 'src/**/*.ts' --check",
    "release": "standard-version"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.19.0",
    "@graphprotocol/graph-ts": "^0.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "prettier": "^2.2.1",
    "standard-version": "^9.0.0",
    "typescript": "^4.1.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/node_modules/**"
    ],
    "globals": [
      "require"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
